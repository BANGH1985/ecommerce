<div class="text-center">   
    <div>
        <h2>Iniciar Sesión</h2>
    </div>
    <br>
    <div>
        <form action="/api/sessions/login" method="POST">
            <label for="email">Email:</label>
            <input type="email" name="email" required>
            <label for="password">Contraseña:</label>
            <input type="password" name="password" required>
            <button type="submit" class="btn btn-info">Ingresar</button>
        </form>
    </div>
    <br>
    <div >
        <div>
            <a href="/register"><button class="btn btn-info">Registrarse</button></a>
        </div>
        <h3>O puede loguearse con</h3>
        <div>
            <a href="/api/sessions/github"><button class="btn btn-info" >Ingresar con GitHub</button></a>
        </div>
    </div>
</div>